<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bp.pruebacontentprovider">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <!-- MIME -->
                <data android:mimeType="vnd.android.cursor.item/vnd.bp.pruebacontentprovider.provider.datos" />
            </intent-filter>
        </activity>

        <!-- DeclaraciÃ³n del ContentProvider -->
        <provider android:name=".ContentProv"
            android:authorities="com.bp.pruebacontentprovider.ContentProv">
        </provider>

    </application>

</manifest>